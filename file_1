# 5 
# Calculating Maximum Hurricane Count

# find most frequently affected area and the number of hurricanes involved in
def most_affected_area(hurricanes):
    area_counts = {}
    
    for hurricane in hurricanes:
        for area in hurricane['Areas Affected']:
            if area not in area_counts:
                area_counts[area] = 0
            area_counts[area] += 1
    
    most_affected = max(area_counts, key=area_counts.get)
    return most_affected, area_counts[most_affected]

# Create a list of dictionaries (similar to the previous hurricanes data)
hurricanes = [
    {'Name': 'Cuba I', 'Month': 'October', 'Year': 1924, 'Max Sustained Wind': 165, 'Areas Affected': ['Central America', 'Mexico', 'Cuba', 'Florida', 'The Bahamas'], 'Damage': 'Damages not recorded', 'Deaths': 90},
    {'Name': 'San Felipe II Okeechobee', 'Month': 'September', 'Year': 1928, 'Max Sustained Wind': 160, 'Areas Affected': ['Lesser Antilles', 'The Bahamas', 'United States East Coast', 'Atlantic Canada'], 'Damage': '100M', 'Deaths': 4000},
    {'Name': 'Mitch', 'Month': 'October', 'Year': 1998, 'Max Sustained Wind': 180, 'Areas Affected': ['Central America', 'Yucatán Peninsula', 'South Florida'], 'Damage': '6.2B', 'Deaths': 19325},
    # Add other hurricanes as needed...
]

# Find the most affected area
area, count = most_affected_area(hurricanes)
print(f"The most affected area is {area} with {count} hurricanes.")


# 6
# Calculating the Deadliest Hurricane

# find highest mortality hurricane and the number of deaths
def deadliest_hurricane(hurricanes):
    max_deaths = 0
    deadliest_hurricane = None

    for hurricane in hurricanes:
        if hurricane['Deaths'] > max_deaths:
            max_deaths = hurricane['Deaths']
            deadliest_hurricane = hurricane

    return deadliest_hurricane, max_deaths

# Create a list of dictionaries (similar to the previous hurricanes data)
hurricanes = [
    {'Name': 'Cuba I', 'Month': 'October', 'Year': 1924, 'Max Sustained Wind': 165, 'Areas Affected': ['Central America', 'Mexico', 'Cuba', 'Florida', 'The Bahamas'], 'Damage': 'Damages not recorded', 'Deaths': 90},
    {'Name': 'San Felipe II Okeechobee', 'Month': 'September', 'Year': 1928, 'Max Sustained Wind': 160, 'Areas Affected': ['Lesser Antilles', 'The Bahamas', 'United States East Coast', 'Atlantic Canada'], 'Damage': '100M', 'Deaths': 4000},
    {'Name': 'Mitch', 'Month': 'October', 'Year': 1998, 'Max Sustained Wind': 180, 'Areas Affected': ['Central America', 'Yucatán Peninsula', 'South Florida'], 'Damage': '6.2B', 'Deaths': 19325},
    # Add other hurricanes as needed...
]

# Find the deadliest hurricane
deadliest, death_count = deadliest_hurricane(hurricanes)
print(f"The deadliest hurricane is {deadliest['Name']} with {death_count} deaths.")

# 7
# Rating Hurricanes by Mortality


# categorize hurricanes in new dictionary with mortality severity as key
def rate_hurricanes_by_mortality(hurricanes, mortality_scale):
    rated_hurricanes = {rating: [] for rating in mortality_scale.keys()}

    for hurricane in hurricanes:
        deaths = hurricane['Deaths']
        for rating, upper_bound in mortality_scale.items():
            if deaths <= upper_bound:
                rated_hurricanes[rating].append(hurricane)
                break

    return rated_hurricanes

# Mortality scale
mortality_scale = {0: 0, 1: 100, 2: 500, 3: 1000, 4: 10000, 5: float('inf')}

# Hurricanes data
hurricanes = [
    {'Name': 'Cuba I', 'Month': 'October', 'Year': 1924, 'Max Sustained Wind': 165, 'Areas Affected': ['Central America', 'Mexico', 'Cuba', 'Florida', 'The Bahamas'], 'Damage': 'Damages not recorded', 'Deaths': 90},
    {'Name': 'San Felipe II Okeechobee', 'Month': 'September', 'Year': 1928, 'Max Sustained Wind': 160, 'Areas Affected': ['Lesser Antilles', 'The Bahamas', 'United States East Coast', 'Atlantic Canada'], 'Damage': '100M', 'Deaths': 4000},
    {'Name': 'Mitch', 'Month': 'October', 'Year': 1998, 'Max Sustained Wind': 180, 'Areas Affected': ['Central America', 'Yucatán Peninsula', 'South Florida'], 'Damage': '6.2B', 'Deaths': 19325},
    # Add other hurricanes as needed...
]

# Rate hurricanes by mortality
rated_hurricanes = rate_hurricanes_by_mortality(hurricanes, mortality_scale)
print(rated_hurricanes)


# 8 Calculating Hurricane Maximum Damage

# find highest damage inducing hurricane and its total cost
def most_costly_hurricane(hurricanes):
    max_damage = 0
    most_damaging_hurricane = None

    for hurricane in hurricanes:
        damage = hurricane['Damage']
        if damage != "Damages not recorded":
            damage_value = float(damage[:-1]) * (1e6 if damage[-1] == 'M' else 1e9)
            if damage_value > max_damage:
                max_damage = damage_value
                most_damaging_hurricane = hurricane

    return most_damaging_hurricane, max_damage

# Hurricanes data
hurricanes = [
    {'Name': 'Cuba I', 'Month': 'October', 'Year': 1924, 'Max Sustained Wind': 165, 'Areas Affected': ['Central America', 'Mexico', 'Cuba', 'Florida', 'The Bahamas'], 'Damage': 'Damages not recorded', 'Deaths': 90},
    {'Name': 'San Felipe II Okeechobee', 'Month': 'September', 'Year': 1928, 'Max Sustained Wind': 160, 'Areas Affected': ['Lesser Antilles', 'The Bahamas', 'United States East Coast', 'Atlantic Canada'], 'Damage': '100M', 'Deaths': 4000},
    {'Name': 'Mitch', 'Month': 'October', 'Year': 1998, 'Max Sustained Wind': 180, 'Areas Affected': ['Central America', 'Yucatán Peninsula', 'South Florida'], 'Damage': '6.2B', 'Deaths': 19325},
    # Add other hurricanes as needed...
]

# Find the most costly hurricane
most_damaging, damage_cost = most_costly_hurricane(hurricanes)
print(f"The most costly hurricane is {most_damaging['Name']} with damages amounting to ${damage_cost}.")


# 9
# Rating Hurricanes by Damage
damage_scale = {0: 0,
                1: 100000000,
                2: 1000000000,
                3: 10000000000,
                4: 50000000000}
  
# categorize hurricanes in new dictionary with damage severity as key
def rate_hurricanes_by_damage(hurricanes, damage_scale):
    rated_hurricanes = {rating: [] for rating in damage_scale.keys()}

    for hurricane in hurricanes:
        damage = hurricane['Damage']
        if damage != "Damages not recorded":
            damage_value = float(damage[:-1]) * (1e6 if damage[-1] == 'M' else 1e9)
        else:
            damage_value = 0
        
        for rating, upper_bound in damage_scale.items():
            if damage_value <= upper_bound:
                rated_hurricanes[rating].append(hurricane)
                break

    return rated_hurricanes

# Damage scale
damage_scale = {0: 0, 1: 100000000, 2: 1000000000, 3: 10000000000, 4: 50000000000, 5: float('inf')}

# Hurricanes data
hurricanes = [
    {'Name': 'Cuba I', 'Month': 'October', 'Year': 1924, 'Max Sustained Wind': 165, 'Areas Affected': ['Central America', 'Mexico', 'Cuba', 'Florida', 'The Bahamas'], 'Damage': 'Damages not recorded', 'Deaths': 90},
    {'Name': 'San Felipe II Okeechobee', 'Month': 'September', 'Year': 1928, 'Max Sustained Wind': 160, 'Areas Affected': ['Lesser Antilles', 'The Bahamas', 'United States East Coast', 'Atlantic Canada'], 'Damage': '100M', 'Deaths': 4000},
    {'Name': 'Mitch', 'Month': 'October', 'Year': 1998, 'Max Sustained Wind': 180, 'Areas Affected': ['Central America', 'Yucatán Peninsula', 'South Florida'], 'Damage': '6.2B', 'Deaths': 19325},
    # Add other hurricanes as needed...
]

# Rate hurricanes by damage
rated_hurricanes = rate_hurricanes_by_damage(hurricanes, damage_scale)
print(rated_hurricanes)


