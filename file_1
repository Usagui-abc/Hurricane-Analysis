def construct_hurricane_data(names, months, years, max_sustained_winds, areas_affected, damages, deaths):
    hurricane_data = {}

    for i in range(len(names)):
        hurricane_name = names[i]
        hurricane_info = {
            'Name': hurricane_name,
            'Month': months[i],
            'Year': years[i],
            'Max Sustained Wind': max_sustained_winds[i],
            'Areas Affected': areas_affected[i],
            'Damage': damages[i],
            'Deaths': deaths[i]
        }
        hurricane_data[hurricane_name] = hurricane_info

    return hurricane_data

# Test the function with the provided data
hurricane_dict = construct_hurricane_data(names, months, years, max_sustained_winds, areas_affected, damages, deaths)

# Print a sample to verify
for name in list(hurricane_dict.keys())[:3]:  # Print the first 3 hurricanes for brevity
    print(hurricane_dict[name])



def hurricanes_by_year(hurricanes):
    hurricanes_dict = {}
    for name, month, year, wind, areas, damage, death in zip(
        names, months, years, max_sustained_winds, areas_affected, damages, deaths):
        
        hurricane_data = {
            'Name': name,
            'Month': month,
            'Year': year,
            'Max Sustained Wind': wind,
            'Areas Affected': areas,
            'Damage': damage,
            'Deaths': death
        }

        if year not in hurricanes_dict:
            hurricanes_dict[year] = []
        hurricanes_dict[year].append(hurricane_data)
    
    return hurricanes_dict

